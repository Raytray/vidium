{
    "manifest_version": 2,
    "name": "Vimium",
    "version": "1.0",
    "omnibox": {
         "keyword": "Vimium"
    },

    "default_locale": "en",
    "description": "A plugin that saves and organizes links to videos.",

    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false	
    },
    "permissions":[
        "browserActions",
    "contextMenus",
    "tabs",

    "https://http://vidium-raytray.rhcloud.com"

        ],
    "browser_action": {
        "default_icon": {                    
            "19": "assets/vidium_icon16.png"
        },
        "default_title": "Vidium",
        "default_popup": "popup.html"
    }
}
