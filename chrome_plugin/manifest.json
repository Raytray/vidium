{
    "manifest_version": 2,
    "name": "Vidium",
    "version": "1.0",
    "omnibox": {
         "keyword": "Vidium"
    },

    "description": "A plugin that saves and organizes links to videos.",

    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false	
    },
    "permissions":[
        "contextMenus",
        "tabs"


        ],
    "browser_action": {
        "default_icon": {                    
            "19": "assets/vidium_icon16.png"
        },
        "default_title": "Vidium",
        "default_popup": "popup.html"
    }
}
